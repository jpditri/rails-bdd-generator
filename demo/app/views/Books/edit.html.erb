<div class="container">
  <div class="card">
    <div class="card-header">
      <h1 style="margin: 0;">Edit Book</h1>
    </div>
    <div class="card-body">
      <%= render 'form', Book: @Book %>
    </div>
    <div class="card-footer">
      <%= link_to @Book, class: 'btn btn-outline' do %>
        <%= view_icon %> View
      <% end %>
      <%= link_to Books_path, class: 'btn btn-secondary' do %>
        <%= list_icon %> Back to List
      <% end %>
    </div>
  </div>
</div>
