<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h1 style="margin: 0;">Categories</h1>
        </div>
        <div class="card-body">
          <div style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <%= render 'shared/search' %>
            <%= link_to new_Category_path, class: 'btn btn-primary' do %>
              <%= plus_icon %> New Category
            <% end %>
          </div>

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                          <th>Description</th>
                  <th style="text-align: right;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @Categories.each do |Category| %>
                  <tr class="Category-row">
                    <td><%= truncate(Category.name.to_s, length: 50) %></td>
                            <td><%= truncate(Category.description.to_s, length: 50) %></td>
                    <td style="text-align: right;">
                      <%= link_to Category, class: 'btn btn-sm btn-outline' do %>
                        <%= view_icon %> View
                      <% end %>
                      <%= link_to edit_Category_path(Category), class: 'btn btn-sm btn-secondary' do %>
                        <%= edit_icon %> Edit
                      <% end %>
                      <%= link_to Category, method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-sm btn-danger' do %>
                        <%= delete_icon %> Delete
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <% if @Categories.empty? %>
                  <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem; color: var(--muted);">
                      No Categories found. <%= link_to 'Create one now', new_Category_path %>.
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= paginate @Categories %>
        </div>
      </div>
    </div>
  </div>
</div>
