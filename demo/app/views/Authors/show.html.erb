<div class="container">
  <div class="card">
    <div class="card-header">
      <h1 style="margin: 0;">Author Details</h1>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>First name:</strong>
      <%= @Author.first_name %>    </div>
                <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Last name:</strong>
      <%= @Author.last_name %>    </div>
                <div class="col-12" style="margin-bottom: 1rem;">
  <strong>Bio:</strong>
  <div style="margin-top: 0.5rem;">
    <%= simple_format(@Author.bio) %>
  </div>
    </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to edit_Author_path(@Author), class: 'btn btn-primary' do %>
        <%= edit_icon %> Edit
      <% end %>
      <%= link_to Author_path(@Author), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
        <%= delete_icon %> Delete
      <% end %>
      <%= link_to Authors_path, class: 'btn btn-secondary' do %>
        <%= list_icon %> Back to List
      <% end %>
    </div>
  </div>

  <% if @Author.respond_to?(:reviews) && @Author.reviews.any? %>
    <div class="card" style="margin-top: 1rem;">
      <div class="card-header">Reviews</div>
      <div class="card-body">
        <%= render @Author.reviews %>
      </div>
    </div>
  <% end %>
</div>
