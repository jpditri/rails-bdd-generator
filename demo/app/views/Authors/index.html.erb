<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h1 style="margin: 0;">Authors</h1>
        </div>
        <div class="card-body">
          <div style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <%= render 'shared/search' %>
            <%= link_to new_Author_path, class: 'btn btn-primary' do %>
              <%= plus_icon %> New Author
            <% end %>
          </div>

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>First name</th>
                          <th>Last name</th>
                          <th>Bio</th>
                  <th style="text-align: right;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @Authors.each do |Author| %>
                  <tr class="Author-row">
                    <td><%= truncate(Author.first_name.to_s, length: 50) %></td>
                            <td><%= truncate(Author.last_name.to_s, length: 50) %></td>
                            <td><%= truncate(Author.bio.to_s, length: 50) %></td>
                    <td style="text-align: right;">
                      <%= link_to Author, class: 'btn btn-sm btn-outline' do %>
                        <%= view_icon %> View
                      <% end %>
                      <%= link_to edit_Author_path(Author), class: 'btn btn-sm btn-secondary' do %>
                        <%= edit_icon %> Edit
                      <% end %>
                      <%= link_to Author, method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-sm btn-danger' do %>
                        <%= delete_icon %> Delete
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <% if @Authors.empty? %>
                  <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem; color: var(--muted);">
                      No Authors found. <%= link_to 'Create one now', new_Author_path %>.
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= paginate @Authors %>
        </div>
      </div>
    </div>
  </div>
</div>
