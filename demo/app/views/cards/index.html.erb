<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h1 style="margin: 0;">Cards</h1>
        </div>
        <div class="card-body">
          <div style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <%= render 'shared/search' %>
            <%= link_to new_card_path, class: 'btn btn-primary' do %>
              <%= plus_icon %> New Card
            <% end %>
          </div>

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                          <th>Description</th>
                          <th>Price</th>
                          <th>Status</th>
                  <th style="text-align: right;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @cards.each do |card| %>
                  <tr class="card-row">
                    <td><%= truncate(card.name.to_s, length: 50) %></td>
                            <td><%= truncate(card.description.to_s, length: 50) %></td>
                            <td class="price"><%= format_currency(card.price) %></td>
                            <td>
          <span class="badge badge-<%= card.status_badge_class %>">
            <%= card.status.humanize %>
          </span>
        </td>
                    <td style="text-align: right;">
                      <%= link_to card, class: 'btn btn-sm btn-outline' do %>
                        <%= view_icon %> View
                      <% end %>
                      <%= link_to edit_card_path(card), class: 'btn btn-sm btn-secondary' do %>
                        <%= edit_icon %> Edit
                      <% end %>
                      <%= link_to card, method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-sm btn-danger' do %>
                        <%= delete_icon %> Delete
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <% if @cards.empty? %>
                  <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem; color: var(--muted);">
                      No cards found. <%= link_to 'Create one now', new_card_path %>.
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= paginate @cards %>
        </div>
      </div>
    </div>
  </div>
</div>
