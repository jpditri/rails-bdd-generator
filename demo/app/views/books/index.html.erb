<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h1 style="margin: 0;">Books</h1>
        </div>
        <div class="card-body">
          <div style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <%= render 'shared/search' %>
            <%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
          </div>

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Title</th>
                          <th>Author</th>
                          <th>Isbn</th>
                          <th>Description</th>
                  <th style="text-align: right;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                  <tr class="book-row">
                    <td><%= truncate(book.title.to_s, length: 50) %></td>
                            <td><%= truncate(book.author.to_s, length: 50) %></td>
                            <td><%= truncate(book.isbn.to_s, length: 50) %></td>
                            <td><%= truncate(book.description.to_s, length: 50) %></td>
                    <td style="text-align: right;">
                      <%= link_to 'View', book, class: 'btn btn-sm btn-outline' %>
                      <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-sm btn-secondary' %>
                      <%= link_to 'Delete', book, method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-sm btn-danger' %>
                    </td>
                  </tr>
                <% end %>
                <% if @books.empty? %>
                  <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem; color: var(--muted);">
                      No books found. <%= link_to 'Create one now', new_book_path %>.
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= paginate @books %>
        </div>
      </div>
    </div>
  </div>
</div>
