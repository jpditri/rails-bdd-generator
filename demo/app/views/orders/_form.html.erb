<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :order_number %>
  <%= form.text_field :order_number, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :total_amount %>
  <%= form.number_field :total_amount, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :status %>
  <%= form.text_field :status, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :shipping_address %>
  <%= form.text_area :shipping_address, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :payment_method %>
  <%= form.text_field :payment_method, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :notes %>
  <%= form.text_area :notes, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :shipped_at %>
  <%= form.date_field :shipped_at, class: 'form-control' %>
</div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
