<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h1 style="margin: 0;">Orders</h1>
        </div>
        <div class="card-body">
          <div style="margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
            <%= render 'shared/search' %>
            <%= link_to 'New Order', new_order_path, class: 'btn btn-primary' %>
          </div>

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Order number</th>
                          <th>Total amount</th>
                          <th>Status</th>
                          <th>Shipping address</th>
                  <th style="text-align: right;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @orders.each do |order| %>
                  <tr class="order-row">
                    <td><%= truncate(order.order_number.to_s, length: 50) %></td>
                            <td class="price"><%= format_currency(order.total_amount) %></td>
                            <td>
          <span class="badge badge-<%= order.status_badge_class %>">
            <%= order.status.humanize %>
          </span>
        </td>
                            <td><%= truncate(order.shipping_address.to_s, length: 50) %></td>
                    <td style="text-align: right;">
                      <%= link_to 'View', order, class: 'btn btn-sm btn-outline' %>
                      <%= link_to 'Edit', edit_order_path(order), class: 'btn btn-sm btn-secondary' %>
                      <%= link_to 'Delete', order, method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-sm btn-danger' %>
                    </td>
                  </tr>
                <% end %>
                <% if @orders.empty? %>
                  <tr>
                    <td colspan="5" style="text-align: center; padding: 2rem; color: var(--muted);">
                      No orders found. <%= link_to 'Create one now', new_order_path %>.
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>
