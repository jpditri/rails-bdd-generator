<h1>Reviews</h1>

<%= link_to 'New Review', new_review_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Title</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.title %></td>
        <td><%= review.content %></td>
        <td>
          <%= link_to 'Show', review %>
          <%= link_to 'Edit', edit_review_path(review) %>
          <%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reviews %>
