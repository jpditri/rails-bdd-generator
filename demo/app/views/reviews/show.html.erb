<div class="container">
  <div class="card">
    <div class="card-header">
      <h1 style="margin: 0;">Review Details</h1>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Rating:</strong>
      <%= @review.rating %>    </div>
                <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Title:</strong>
      <%= @review.title %>    </div>
                <div class="col-12" style="margin-bottom: 1rem;">
  <strong>Content:</strong>
  <div style="margin-top: 0.5rem;">
    <%= simple_format(@review.content) %>
  </div>
    </div>
                <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Verified purchase:</strong>
<% if @review.verified_purchase %>
  <span class="badge badge-success">Yes</span>
<% else %>
  <span class="badge badge-danger">No</span>
<% end %>
    </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to 'Edit', edit_review_path(@review), class: 'btn btn-primary' %>
      <%= link_to 'Delete', review_path(@review), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <%= link_to 'Back to List', reviews_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <% if @review.respond_to?(:reviews) && @review.reviews.any? %>
    <div class="card" style="margin-top: 1rem;">
      <div class="card-header">Reviews</div>
      <div class="card-body">
        <%= render @review.reviews %>
      </div>
    </div>
  <% end %>
</div>
