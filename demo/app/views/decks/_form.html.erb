<%= form_with(model: deck, local: true) do |form| %>
  <% if deck.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% deck.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :description %>
  <%= form.text_area :description, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :price %>
  <%= form.number_field :price, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :status %>
  <%= form.text_field :status, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :active %>
  <%= form.check_box :active, class: 'form-control' %>
</div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
