<%= form_with(model: order_item, local: true) do |form| %>
  <% if order_item.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% order_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :quantity %>
  <%= form.number_field :quantity, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :unit_price %>
  <%= form.number_field :unit_price, class: 'form-control' %>
</div>
  <div class="field">
  <%= form.label :subtotal %>
  <%= form.number_field :subtotal, class: 'form-control' %>
</div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
