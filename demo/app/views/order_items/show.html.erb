<div class="container">
  <div class="card">
    <div class="card-header">
      <h1 style="margin: 0;">Order_item Details</h1>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Quantity:</strong>
      <%= @order_item.quantity %>    </div>
                <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Unit price:</strong>
      <span class="price"><%= format_currency(@order_item.unit_price) %></span>    </div>
                <div class="col-md-6" style="margin-bottom: 1rem;">
  <strong>Subtotal:</strong>
      <%= @order_item.subtotal %>    </div>
      </div>
    </div>
    <div class="card-footer">
      <%= link_to 'Edit', edit_order_item_path(@order_item), class: 'btn btn-primary' %>
      <%= link_to 'Delete', order_item_path(@order_item), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <%= link_to 'Back to List', order_items_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <% if @order_item.respond_to?(:reviews) && @order_item.reviews.any? %>
    <div class="card" style="margin-top: 1rem;">
      <div class="card-header">Reviews</div>
      <div class="card-body">
        <%= render @order_item.reviews %>
      </div>
    </div>
  <% end %>
</div>
